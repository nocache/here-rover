<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">

<Document>
  <name>CND Moon Rovers</name>
  <visibility>0</visibility>
  <open>1</open>
  <LookAt>
    <longitude>55.5</longitude>
    <latitude>44.4</latitude>
    <altitude>0</altitude>
    <range>20000</range>
    <tilt>0</tilt>
    <heading>0</heading>
  </LookAt>

  <Folder>
    <name>Rovers</name>
    <% @placemarks.each do |placemark| %>
    <Placemark id="<%= placemark.id %>">
      <name><%= placemark.name %></name>
      <%= content_tag(:description, placemark.description) if placemark.description %>
      <Point>
        <coordinates><%= placemark.coords %>,0</coordinates>
      </Point>
    </Placemark>
    <% end %>
  </Folder>

  <Folder>
    <name>CND Command Centre</name>
    <Placemark>
      <name><%= @cmd_centre.place.name %></name>
      <Point>
        <coordinates><%= @cmd_centre.coords %>,0</coordinates>
      </Point>
    </Placemark>
  </Folder>

</Document>
</kml>
